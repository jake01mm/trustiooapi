db-init:
	@echo "ğŸ”§ åˆå§‹åŒ–æ•°æ®åº“å’Œè¿ç§»ç³»ç»Ÿ..."
	@cd db && go run init.go

db-migrate:
	@echo "ğŸš€ æ‰§è¡Œæ•°æ®åº“è¿ç§»..."
	@cd db && go run migrate_new.go -action=up

db-rollback:
	@echo "â¬‡ï¸  å›æ»šæœ€åä¸€ä¸ªè¿ç§»..."
	@cd db && go run migrate_new.go -action=down -steps=1

db-rollback-n:
	@echo "â¬‡ï¸  å›æ»š $(N) ä¸ªè¿ç§»..."
	@cd db && go run migrate_new.go -action=down -steps=$(N)

db-status:
	@cd db && go run status.go

db-create:
	@echo "ğŸ“ åˆ›å»ºæ–°è¿ç§»: $(NAME)"
	@cd db && go run migrate_new.go -action=create -name="$(NAME)"

db-force:
	@echo "âš¡ å¼ºåˆ¶è®¾ç½®è¿ç§»ç‰ˆæœ¬åˆ° $(N)..."
	@cd db && go run migrate_new.go -action=force -force=$(N)

db-drop:
	@echo "ğŸ—‘ï¸  åˆ é™¤æ‰€æœ‰è¡¨..."
	@read -p "ç¡®å®šè¦åˆ é™¤æ‰€æœ‰è¡¨å—ï¼Ÿè¿™å°†æ¸…ç©ºæ•´ä¸ªæ•°æ®åº“ï¼è¾“å…¥ 'yes' ç¡®è®¤: " confirm && [ "$$confirm" = "yes" ]
	@cd db && go run migrate_new.go -action=drop

db-backup:
	@echo "ğŸ“¦ åˆ›å»ºæ•°æ®åº“å¤‡ä»½..."
	@cd db && go run backup.go -action=backup

db-restore:
	@echo "ğŸ”„ ä»å¤‡ä»½æ¢å¤æ•°æ®åº“..."
	@cd db && go run backup.go -action=restore -file="$(FILE)"

db-test:
	@echo "æµ‹è¯•æ•°æ®åº“è¿æ¥..."
	@go run db/test/test.go

db-verify:
	@echo "éªŒè¯æ•°æ®åº“è¡¨ç»“æ„..."
